# ============================================
# LLM Service Configuration (2025 edition)
# ============================================

# Application Settings
APP_NAME=LLM Service
VERSION=1.0.0
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# CORS Settings (comma-separated або *)
CORS_ORIGINS=["*"]

# Enabled Providers (comma-separated)
# Доступні: ollama, huggingface, openai, local_universal
ENABLED_PROVIDERS=["ollama","huggingface","openai","local_provider"]

# ============================================
# Ollama Configuration
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=300
OLLAMA_DEFAULT_MODEL=llama3.2:latest

# ============================================
# HuggingFace Local Configuration
# ============================================
HUGGINGFACE_CACHE_DIR=./models/huggingface
HUGGINGFACE_DEFAULT_MODEL=microsoft/DialoGPT-medium

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-...
OPENAI_ORGANIZATION=
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# ============================================
# Local Universal Provider (tabbyAPI, llama.cpp server, vLLM, LM Studio тощо)
# ============================================
LOCAL_UNIVERSAL_BASE_URL=http://127.0.0.1:8080/v1
LOCAL_UNIVERSAL_API_KEY=not-needed
LOCAL_UNIVERSAL_TIMEOUT=600
LOCAL_UNIVERSAL_DEFAULT_MODEL=local-model

# ============================================
# Generation Settings
# ============================================
MAX_TOKENS=8192
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_P=0.9

# ============================================
# Training Settings
# ============================================
TRAINING_OUTPUT_DIR=./models/fine-tuned
MAX_TRAINING_EPOCHS=10
TRAINING_BATCH_SIZE=8
LEARNING_RATE=2e-5

# ============================================
# Storage Settings
# ============================================
DATA_DIR=./data
MODELS_DIR=./models

# ============================================
# Security & Rate Limiting
# ============================================
API_KEY_ENABLED=false
API_KEYS=your-secret-key-123,another-key-456

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_PER_MINUTE=200