
# ============================================
# LLM Service Configuration
# ============================================

# Application Settings
APP_NAME=LLM Service
VERSION=1.0.0
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# CORS Settings (comma-separated)
CORS_ORIGINS=["*"]

# Enabled Providers (comma-separated)
ENABLED_PROVIDERS=["ollama","huggingface","openai","local_provider"]
# ============================================
# Ollama Configuration
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=300
OLLAMA_DEFAULT_MODEL=llama2

# ============================================
# HuggingFace Configuration
# ============================================
HUGGINGFACE_API_KEY=[]
HUGGINGFACE_CACHE_DIR=./models/huggingface
HUGGINGFACE_DEFAULT_MODEL=gpt2

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=[]
OPENAI_ORGANIZATION=[]
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo

# ============================================
# Local Universal Provider (tabbyAPI, llama.cpp server, vLLM, LM Studio тощо)
# ============================================
LOCAL_UNIVERSAL_BASE_URL=http://127.0.0.1:8080/v1
LOCAL_UNIVERSAL_API_KEY=not-needed
LOCAL_UNIVERSAL_TIMEOUT=600
LOCAL_UNIVERSAL_DEFAULT_MODEL=local-model


# ============================================
# Generation Settings
# ============================================
MAX_TOKENS=2048
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_P=0.9

# ============================================
# Training Settings
# ============================================
TRAINING_OUTPUT_DIR=./models/fine-tuned
MAX_TRAINING_EPOCHS=10
TRAINING_BATCH_SIZE=8
LEARNING_RATE=2e-5

# ============================================
# Storage Settings
# ============================================
DATA_DIR=./data
MODELS_DIR=./models

# ============================================
# Security Settings
# ============================================
API_KEY_ENABLED=false
API_KEYS=[]

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100